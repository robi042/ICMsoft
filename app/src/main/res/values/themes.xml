<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ICMsoft" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6A5BE2</item>
        <item name="colorPrimaryVariant">#6A5BE2</item>
        <item name="colorOnPrimary">#6A5BE2</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <!--        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6A5BE2</item>
        <item name="colorSecondaryVariant">#6A5BE2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#6A5BE2</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>